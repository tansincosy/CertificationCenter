{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "watchAssets": true,
    "assets": [
      {
        "include": "../resources/views/*.hbs",
        "outDir": "./dist/resources"
      },
      {
        "include": "../resources/public/*.css",
        "outDir": "./dist/resources"
      },
      {
        "include": "../resources/*.yaml",
        "outDir": "./dist/resources"
      }
    ]
  }
}
